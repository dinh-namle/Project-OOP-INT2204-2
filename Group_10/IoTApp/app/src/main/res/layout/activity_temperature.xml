<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_temperature"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--    Top bar-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--        User-->

        <com.google.android.material.circularreveal.cardview.CircularRevealCardView
            android:id="@+id/cardview_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="160dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_user" />

        </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

        <!--        Back-->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardview_back_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic_back_main" />

        </com.google.android.material.card.MaterialCardView>

    </RelativeLayout>

    <!--    Header-->

    <TextView
        android:id="@+id/textview_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/nunito"
        android:text="Temperature"
        android:textAlignment="center"
        android:textColor="@color/primary_light"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_setting_temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview_temperature"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:id="@+id/textview_name_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:text="Tên thiết bị"
                android:textAlignment="viewStart"
                android:textColor="@color/third_light"
                android:textSize="20sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textview_status_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_name_temp"
                android:layout_marginVertical="15dp"
                android:text="Trạng thái"
                android:textAlignment="viewStart"
                android:textColor="@color/third_light"
                android:textSize="20sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textview_temperature_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_status_temp"
                android:layout_marginVertical="15dp"
                android:text="Nhiệt độ"
                android:textAlignment="viewStart"
                android:textColor="@color/third_light"
                android:textSize="20sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textview_fanSpeed_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_temperature_temp"
                android:layout_marginVertical="15dp"
                android:text="Tốc độ gió"
                android:textAlignment="viewStart"
                android:textColor="@color/third_light"
                android:textSize="20sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textview_eco_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_fanSpeed_temp"
                android:layout_marginVertical="15dp"
                android:text="Tiết kiệm điện"
                android:textAlignment="viewStart"
                android:textColor="@color/third_light"
                android:textSize="20sp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textview_timer_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_eco_temp"
                android:layout_marginVertical="15dp"
                android:text="Hẹn giờ"
                android:textAlignment="viewStart"
                android:textColor="@color/third_light"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.9"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/layout_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:weightSum="2">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@id/radiobutton_status_off">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radiobutton_status_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:text="Bật"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/second_light"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radiobutton_status_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:text="Tắt"
                        android:textColor="@color/second_light"
                        android:layout_marginHorizontal="20dp"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </RadioGroup>

            </LinearLayout>

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_temperature_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_status"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:layout_marginTop="2dp"
                android:stepSize="1.0"
                android:valueFrom="16.0"
                android:valueTo="30.0" />

            <com.google.android.material.slider.Slider
                android:id="@+id/slider_fanSpeed_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/slider_temperature_temp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:stepSize="1.0"
                android:valueFrom="0.0"
                android:valueTo="4.0" />

            <LinearLayout
                android:id="@+id/layout_eco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/slider_fanSpeed_temp"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:weightSum="2">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@id/radiobutton_eco_off">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radiobutton_eco_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:text="Bật"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/second_light"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radiobutton_eco_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:text="Tắt"
                        android:textColor="@color/second_light"
                        android:layout_marginHorizontal="20dp"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_eco"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:weightSum="2">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:checkedButton="@id/radiobutton_timer_off">

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radiobutton_timer_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:text="Bật"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/second_light"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <com.google.android.material.radiobutton.MaterialRadioButton
                        android:id="@+id/radiobutton_timer_off"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito"
                        android:text="Tắt"
                        android:textColor="@color/second_light"
                        android:layout_marginHorizontal="20dp"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </RadioGroup>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_timer"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edittext_timer_start"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:background="@color/third_light"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/edittext_timer_stop"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:background="@color/third_light"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_start_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_setting_temperature"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/nunito"
        android:text="Start"
        android:textStyle="bold" />
</RelativeLayout>